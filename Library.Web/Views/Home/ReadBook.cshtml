@model Library.Domains.Books.Entities.Book

@{
    ViewData["Title"] = "ReadBook";
}




<section class="page-users-view">
    <div class="row">
        <!-- account start -->
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <div class="card-title">کتاب: @Model.BookName</div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="users-view-image">
                            <img src="/Images/@Model.ImageName" class="users-avatar-shadow w-100 rounded mb-2 pr-2 ml-1" id="imgBook" alt="avatar">
                        </div>
                        <div class="col-12 col-sm-9 col-md-6 col-lg-5">
                            <table>
                                <tbody>
                                    <tr>
                                        <td class="font-weight-bold">نام کتاب</td>
                                        <td>@Model.BookName</td>
                                    </tr>
                                    <tr>
                                        <td class="font-weight-bold">کد شابک</td>
                                        <td>@Model.ShabekNo </td>
                                    </tr>
                                    <tr>
                                        <td class="font-weight-bold">موضوع</td>
                                        <td>@Model.Subject</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <div class="col-12 col-md-12 col-lg-10">
                            <table class="ml-0 ml-sm-0 ml-lg-0">
                                <tbody>
                                    <tr>
                                        <td class="font-weight-bold">متن</td>
                                        <td>@Model.Content</td>
                                    </tr>
                                
                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>
            </div>
        </div>
        <!-- account end -->

    </div>
</section>