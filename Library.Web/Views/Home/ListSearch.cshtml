@model List<Library.Domains.Books.Entities.Book>
@{
    ViewData["Title"] = "ListSearch";
}


<table class="table table-bordered">
    <thead>
    <tr>
        <th>نام کتاب</th>
        <th>شابک</th>
        <th>موضوع</th>
        <th>تصویر</th>
        <th>عملیات</th>
    </tr>
    </thead>
    <tbody>
 @if (Model.Count==0)
 {
     <tr>
         <td colspan="5">
             یافت نشد
         </td>
     </tr>
 }
 else
 {
     foreach (var book in Model)
     {
         <tr>
             <td>@book.BookName</td>
             <td>@book.ShabekNo</td>
             <td>@book.Subject</td>
             <td>
                 <img src="/Images/@book.ImageName" id="img">
             </td>
             <td>
                 <a class="btn btn-success" asp-action="ReadBook" asp-route-bookId="@book.BookId">
                     خواندن
                 </a>
             </td>
         </tr>
     }
 }
    </tbody>
</table>